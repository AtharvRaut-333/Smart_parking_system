pipeline {
    agent any
    
    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }
    
    environment {
        // Nexus Docker Registry
        NEXUS_DOCKER_REGISTRY = 'localhost:8082'
        DOCKER_IMAGE_NAME = 'smart-parking-backend'
        NEXUS_CREDENTIALS = credentials('nexus-credentials')
        
        // SonarQube
        SONAR_HOST_URL = 'http://localhost:9000'
        SONAR_TOKEN = credentials('sonarqube-token')
        
        // Nexus Maven Repository
        NEXUS_URL = 'http://localhost:8081'
        NEXUS_REPOSITORY = 'maven-snapshots'
        
        // Application
        APP_NAME = 'smart-parking-backend'
        BUILD_VERSION = "${env.BUILD_NUMBER}"
    }
    
    triggers {
        // Poll SCM every 5 minutes (can be replaced with GitHub webhook)
        pollSCM('H/5 * * * *')
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checking out code from GitHub...'
                checkout scm
                script {
                    env.GIT_COMMIT_MSG = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                    env.GIT_AUTHOR = sh(script: 'git log -1 --pretty=%an', returnStdout: true).trim()
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building application with Maven...'
                dir('smark-parking-backend') {
                    sh 'mvn clean compile -DskipTests'
                }
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'üß™ Running unit tests...'
                dir('smark-parking-backend') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    dir('smark-parking-backend') {
                        junit '**/target/surefire-reports/*.xml'
                    }
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Running SonarQube code analysis...'
                dir('smark-parking-backend') {
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            mvn sonar:sonar \
                                -Dsonar.projectKey=smart-parking-backend \
                                -Dsonar.projectName='Smart Parking Backend' \
                                -Dsonar.host.url=${SONAR_HOST_URL} \
                                -Dsonar.login=${SONAR_TOKEN}
                        """
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo 'üö¶ Checking SonarQube Quality Gate...'
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'üì¶ Packaging application...'
                dir('smark-parking-backend') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        stage('Deploy to Nexus') {
            steps {
                echo 'üì§ Deploying artifact to Nexus...'
                dir('smark-parking-backend') {
                    script {
                        sh """
                            mvn deploy -DskipTests \
                                -DaltDeploymentRepository=nexus::default::${NEXUS_URL}/repository/${NEXUS_REPOSITORY}
                        """
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('smark-parking-backend') {
                    script {
                        dockerImage = docker.build("${NEXUS_DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:${BUILD_VERSION}")
                        docker.build("${NEXUS_DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:latest")
                    }
                }
            }
        }
        
        stage('Push to Nexus Docker Registry') {
            steps {
                echo 'üöÄ Pushing Docker image to Nexus...'
                script {
                    docker.withRegistry("http://${NEXUS_DOCKER_REGISTRY}", 'nexus-credentials') {
                        dockerImage.push("${BUILD_VERSION}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
        
        stage('Deploy to EC2') {
            steps {
                echo 'üåê Deploying to EC2...'
                script {
                    // Deploy on same EC2 instance
                    sh """
                        docker stop ${APP_NAME} || true
                        docker rm ${APP_NAME} || true
                        docker run -d \
                            --name ${APP_NAME} \
                            -p 8081:8081 \
                            --restart unless-stopped \
                            -e SPRING_PROFILES_ACTIVE=prod \
                            ${NEXUS_DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:latest
                    """
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo '‚ù§Ô∏è Performing health check...'
                script {
                    sleep(time: 30, unit: 'SECONDS')
                    sh """
                        curl -f http://localhost:8081/actuator/health || exit 1
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
            // Add notification here (email, Slack, etc.)
        }
        failure {
            echo '‚ùå Pipeline failed!'
            // Rollback logic
            script {
                sh """
                    docker stop ${APP_NAME} || true
                    docker rm ${APP_NAME} || true
                    # Optionally pull and run previous stable version
                """
            }
        }
        always {
            echo 'üßπ Cleaning up workspace...'
            cleanWs()
        }
    }
}
